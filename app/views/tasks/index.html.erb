<h1 style="margin: 30px;">Tasks</h1>

<ul id="tasks-ul" style="display:flex; flex-direction:column; list-style: none; padding: 0; margin: 20px 0px; ">
  <% @tasks.each do |task| %>
    <li style="margin: 10px; border: 1px solid black; width: 200px; padding: 20px; border-radius: 5px;">
    <p><%= link_to task.title, task_path(task) %> ID: <%= task.id %></p>
    Done? <input type="checkbox" id="task-<%= task.id %>" name="scales" <%= (task.completed? ? "checked" : "") %>>
    </li>
  <% end %>
</ul>

<h3 style="margin: 30px;"><%= link_to 'New task', new_task_path %></h3>
